<div class="col-lg-4">
  <div class="place">
    <div class="thumb">
      <% if images(tour.id).attached? %>
        <%= link_to image_tag(images(tour.id)[0], class: "img-fluid"), tour_path(tour.id) %>    
      <% end %>      
    </div>

    <div class="place-content">
      <%= link_to tour_path(tour.id) do %>
        <h4><%= tour.tour_name %></h4>
      <% end %>

      <div class="row">
        <div class="col-lg-4">
          <span class="fas fa-umbrella-beach"></span>
          <span><%= tour.tour_amount %></span>
        </div>
        <div class="col-lg-4">
          <span class="fas fa-clock"></span>
          <span><%= time_short(tour.time) %></span>
        </div>
        <div class="col-lg-4">
          <span class="fas fa-money-bill-alt"></span>
          <span><%= tour.price %>$</span>
        </div>
      </div>
    </div>

  </div>	
</div> 
